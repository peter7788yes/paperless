<UserControl x:Class="PaperLess_Emeeting.JoinRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  Margin="5,3,0,0"  Background="#00A2C2" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">

    <Grid >
        <StackPanel Orientation="Horizontal">
            <Image  HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="10"  Width="32" Height="32" Source="image/preicon_folder@2x.png"  />
            <TextBlock x:Name="txtName" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"  Text=""  TextWrapping="Wrap"  FontSize="18"   />
            <TextBox x:Name="tbName" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Collapsed"  Text=""  TextWrapping="Wrap"  FontSize="18"  Width="150"  />
        </StackPanel>
    </Grid>
</UserControl>
